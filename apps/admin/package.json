{
  "name": "@t-erp/admin",
  "version": "1.0.0",
  "description": "T-ERP Admin Dashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vue-tsc && vite build",
    "dev": "vite --port 3001",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "vue-tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "pinia": "^2.1.6",
    "element-plus": "^2.3.8",
    "@element-plus/icons-vue": "^2.1.0",
    "axios": "^1.4.0",
    "vue-i18n": "^9.2.2",
    "dayjs": "^1.11.9",
    "echarts": "^5.4.2",
    "vue-echarts": "^6.6.0",
    "@t-erp/shared": "workspace:*",
    "@t-erp/ui": "workspace:*",
    "@vueuse/core": "^10.3.0",
    "nprogress": "^0.2.0",
    "sass": "^1.66.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/tsconfig": "^0.4.0",
    "typescript": "~5.1.6",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.5",
    "vitest": "^0.34.1",
    "@vue/test-utils": "^2.4.1",
    "jsdom": "^22.1.0",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.1",
    "rimraf": "^5.0.1",
    "@types/nprogress": "^0.2.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
