# T-ERP 系統環境變數配置文件
# 複製此文件為 .env 並修改相應的值

# ================================================
# 應用基本設定
# ================================================
NODE_ENV=development
APP_NAME=T-ERP
APP_VERSION=1.0.0
PORT=3000

# ================================================
# 資料庫設定 (PostgreSQL)
# ================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=t_erp
DB_USER=postgres
DB_PASSWORD=postgres123

# 資料庫連接池設定
DB_CONNECTION_LIMIT=20
DB_CONNECTION_TIMEOUT=60000
DB_IDLE_TIMEOUT=600000

# ================================================
# Redis 設定
# ================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ================================================
# JWT 設定 (請在生產環境中更改為安全的密鑰)
# ================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-at-least-32-characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# ================================================
# Session 設定
# ================================================
SESSION_SECRET=your-super-secret-session-key-change-in-production-must-be-at-least-32-characters
SESSION_MAX_AGE=86400000

# ================================================
# API 設定
# ================================================
API_PREFIX=api
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# ================================================
# CORS 設定
# ================================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# ================================================
# 前端應用 URL
# ================================================
ADMIN_BASE_URL=http://localhost:3001
CLIENT_BASE_URL=http://localhost:3002

# ================================================
# 郵件設定 (可選)
# ================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@t-erp.local

# ================================================
# 文件上傳設定
# ================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# ================================================
# 安全設定
# ================================================
BCRYPT_ROUNDS=12
HELMET_CSP_ENABLED=true

# ================================================
# 日誌設定
# ================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5

# ================================================
# 監控設定 (可選)
# ================================================
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9464

# ================================================
# 開發模式設定
# ================================================
ENABLE_SWAGGER=true
ENABLE_DEBUG=false
ENABLE_SQL_LOGGING=false

# ================================================
# Docker 相關設定
# ================================================
COMPOSE_PROJECT_NAME=t-erp
DOCKER_NETWORK=t-erp-network

# ================================================
# SSL/TLS 設定 (生產環境)
# ================================================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# ================================================
# 備份設定
# ================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ================================================
# 業務邏輯設定
# ================================================
# 庫存預警閾值 (百分比)
LOW_STOCK_THRESHOLD=10

# 訂單自動失效時間 (小時)
ORDER_EXPIRY_HOURS=72

# 價格精度 (小數位數)
PRICE_PRECISION=2

# 默認貨幣
DEFAULT_CURRENCY=TWD

# 默認語言
DEFAULT_LOCALE=zh-TW

# 默認時區
DEFAULT_TIMEZONE=Asia/Taipei

# ================================================
# 效能調優設定
# ================================================
# 快取過期時間 (秒)
CACHE_TTL=3600

# 分頁預設大小
DEFAULT_PAGE_SIZE=20

# 最大分頁大小
MAX_PAGE_SIZE=100

# ================================================
# 第三方服務設定 (可選)
# ================================================
# SMS 服務
SMS_PROVIDER=
SMS_API_KEY=
SMS_API_SECRET=

# 支付服務
PAYMENT_PROVIDER=
PAYMENT_API_KEY=
PAYMENT_API_SECRET=

# 物流服務
LOGISTICS_PROVIDER=
LOGISTICS_API_KEY=
LOGISTICS_API_SECRET=