{
  "name": "@t-erp/client",
  "version": "1.0.0",
  "description": "T-ERP Client Mobile App",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vue-tsc && vite build",
    "dev": "vite --port 3002",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "vue-tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "pinia": "^2.1.6",
    "vant": "^4.6.2",
    "axios": "^1.4.0",
    "vue-i18n": "^9.2.2",
    "dayjs": "^1.11.9",
    "@vant/touch-emulator": "^1.4.0",
    "@t-erp/shared": "workspace:*",
    "@t-erp/ui": "workspace:*"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/tsconfig": "^0.4.0",
    "typescript": "~5.1.6",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.5",
    "vitest": "^0.34.1",
    "@vue/test-utils": "^2.4.1",
    "jsdom": "^22.1.0",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.1",
    "postcss": "^8.4.27",
    "postcss-px-to-viewport": "^1.1.1",
    "rimraf": "^5.0.1"
  }
